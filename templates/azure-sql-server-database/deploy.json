{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json",
    "contentVersion": "0.0.1.1",
    "parameters": {
        "serverName": {
            "type": "string",
            "minLength": 1
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "db-admin",
            "minLength": 1
        },
        "adminPassword": {
            "type": "securestring",
            "minLength": 1
        },
        "databaseName": {
            "type": "string",
            "minLength": 1
        },
        "databaseEdition": {
            "type": "string",
            "allowedValues": [
                "Basic",
                "Standard",
                "Premium"
            ]
        },
        "databaseCollation": {
            "type": "string",
            "defaultValue": "Latin1_General_100_CS_AS",
            "minLength": 1
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "serviceSubnet": {
            "type": "string",
            "minLength": 1
        }
    },
    "resources": [
        {
            "apiVersion": "2015-05-01-preview",
            "name": "[parameters('serverName')]",
            "type": "Microsoft.Sql/servers",
            "location": "[parameters('location')]",
            "kind": "v12.0",
            "properties": {
                "administratorLogin": "[parameters('adminUsername')]",
                "administratorLoginPassword": "[parameters('adminPassword')]",
                "version": "12.0"
            }
        },
        {
            "apiVersion": "2017-03-01-preview",
            "name": "[concat(parameters('serverName'), '/', parameters('databaseName'))]",
            "type": "Microsoft.Sql/servers/databases",
            "kind": "v12.0,user",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]"
            ],
            "properties": {
                "collation": "[parameters('databaseCollation')]",
                "edition": "[parameters('databaseEdition')]",
                "maxSizeBytes": 268435456000
            }
        },
        {
            "apiVersion": "2015-05-01-preview",
            "name": "[concat(parameters('serverName'), '/', uniqueString('vnet-rule-', parameters('serverName')))]",
            "type": "Microsoft.Sql/servers/virtualNetworkRules",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]"
            ],
            "properties": {
                "virtualNetworkSubnetId": "[parameters('serviceSubnet')]"
            }
        }
    ],
    "outputs": {
        "connectionString": {
            "type": "string",
            "value": "[concat('jdbc:sqlserver://', reference(resourceId('Microsoft.Sql/servers',parameters('serverName'))).fullyQualifiedDomainName ,';databaseName=',parameters('databaseName'))]"
        }
    }
}