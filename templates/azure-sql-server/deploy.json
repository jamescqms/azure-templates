{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json",
    "contentVersion": "0.0.1.1",
    "parameters": {
        "serverName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The SQL Server's name."
            }
        },
        "serverEdition": {
            "type": "string",
            "allowedValues": [
                "Basic",
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "The server's edition of Azure SQL server."
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "db-admin",
            "metadata": {
                "description": "The Administrator's username."
            },
            "minLength": 1
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "db-admin",
            "metadata": {
                "description": "The Administrator's password."
            },
            "minLength": 1
        }
    },
    "variables": {
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "apiVersion": "2014-04-01",
            "name": "[parameters('serverName')]",
            "type": "Microsoft.Sql/servers",
            "location": "[variables('location')]",
            "kind": "v12.0",
            "properties": {
                "administratorLogin": "[parameters('adminUsername')]",
                "administratorLoginPassword": "[parameters('adminPassword')]",
                "version": "12.0"
            },
            "resources": [
                {
                    "name": "[uniqueString(parameters('serverName'), 'AllowAllWindowsAzureIps' )]",
                    "type": "firewallRules",
                    "location": "[variables('location')]",
                    "apiVersion": "2014-04-01",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', parameters('serverName'))]"
                    ],
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "0.0.0.0"
                    }
                }
            ]
        }
    ]
}