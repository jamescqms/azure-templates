{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/VM_IP.json",
    "contentVersion": "0.0.1.1",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_DS4_v2"
        },
        "imageUri": {
            "type": "string",
            "minLength": 1
        },
        "networkSubscriptionId": {
            "type": "string",
            "minLength": 1
        },
        "networkResourceGroupName": {
            "type": "string",
            "minLength": 1
        },
        "networkName": {
            "type": "string",
            "minLength": 1
        },
        "subnetName": {
            "type": "string",
            "minLength": 1
        },
        "networkInterfaceName": {
            "type": "string",
            "minLength": 1
        },
        "adminUserName": {
            "type": "string",
            "minLength": 1
        },
        "adminPassword": {
            "type": "securestring",
            "minLength": 1
        },
        "networkSecurityGroupName": {
            "type": "string",
            "minLength": 1
        },
        "networkSecurityGroupRules": {
            "type": "string",
            "minLength": 1
            "defaultValue": "[]"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "resources": [,
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-02-01",
            "name": "[parameters('networkSecurityGroupName')]",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": "[parameters('networkSecurityGroupRules')]"
            }
        },
        {
            "apiVersion": "2017-06-01",
            "name": "[parameters('networkInterfaceName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[parameters('location')]",,
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]"
            ],
            "comments": "This will be your Primary NIC",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId(parameters('networkSubscriptionId'), parameters('networkResourceGroupName'), 'Microsoft.Network/virtualNetworks/subnets', parameters('networkName'), parameters('subnetName'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ],
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
                }
            }
        },
        {
            "apiVersion": "2018-04-01",
            "name": "[parameters('vmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "australiaeast",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "osType": "Windows",
                        "name": "packer-osDisk.9d42db34-db90-40f4-b733-f067433619fc.vhd",
                        "createOption": "FromImage",
                        "image": {
                            "uri": "[parameters('imageUri')]"
                        },
                        "caching": "ReadWrite"
                    }
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": false
                    }
                },
                "provisioningState": 0
            }
        }
    ]
}
